{
  "name": "telegram-billionaire-sim",
  "version": "1.4.0",
  "type": "module",
  "description": "Telegram Mini App - Business Empire Simulator with TON Integration",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "format": "prettier --write src",
    "dev:all": "concurrently \"npm run dev:services\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:services": "docker-compose up -d mongodb redis",
    "dev:backend": "cd server && npm run dev",
    "dev:frontend": "vite",
    "stop:services": "docker-compose down",
    "reset:db": "docker-compose down -v && docker-compose up -d mongodb redis",
    "logs:backend": "tail -f server/logs/combined.log",
    "test:api": "node scripts/test-api.js",
    "setup": "bash scripts/setup-local.sh"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@splinetool/react-spline": "^2.2.6",
    "@splinetool/runtime": "^0.9.489",
    "@telegram-apps/sdk": "^1.0.0",
    "@telegram-apps/sdk-react": "^1.1.3",
    "@ton/core": "^0.56.0",
    "@ton/crypto": "^3.2.0",
    "@ton/ton": "^13.11.2",
    "@tonconnect/sdk": "^3.1.0",
    "@tonconnect/ui": "^2.0.0",
    "@tonconnect/ui-react": "^2.1.0",
    "animejs": "^4.0.2",
    "axios": "^1.6.2",
    "chart.js": "^4.4.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.3",
    "prettier": "^3.1.1",
    "process": "^0.11.10",
    "tailwindcss": "^3.4.17",
    "util": "^0.12.5",
    "vite": "^5.0.10"
  }
}